<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ContactUsActivity">


    <ImageView
        android:id="@+id/imageView_contact"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:src="@drawable/contact"
        app:layout_constraintStart_toStartOf="@+id/textView_contact_us"
        app:layout_constraintTop_toTopOf="@+id/textView_contact_us" />

    <TextView
        android:id="@+id/textView_contact_us"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="39dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Contact us"
        android:textAppearance="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_contactbar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#eeeeee"
        android:src="@drawable/dash_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_addcontact"
        android:layout_width="39dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView_contactbar"
        app:layout_constraintTop_toTopOf="@+id/imageView_contactbar"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText_contactus"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circular_drawable01"
        android:ems="10"
        android:hint=" Enter your message"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_contactus"
        app:layout_constraintStart_toEndOf="@+id/imageView_addcontact"
        app:layout_constraintTop_toTopOf="@+id/imageView_contactbar" />

    <Button
        android:id="@+id/button_contactus"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/login_cta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView_contactbar"
        app:layout_constraintTop_toTopOf="@+id/imageView_contactbar" />

</androidx.constraintlayout.widget.ConstraintLayout>
