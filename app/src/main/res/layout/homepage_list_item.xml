<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/caira_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimension_10dp"
        app:cardCornerRadius="@dimen/dimension_10dp"
        app:cardElevation="@dimen/dimension_10dp"
        android:padding="10dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorWhite">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/girl"
            android:layout_width="109dp"
            android:layout_height="110dp"
            android:outlineProvider="background"
            android:scaleType="centerCrop"
            android:src="@drawable/one"/>

        <TextView
            android:id="@+id/cairo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/girl"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

        <TextView
            android:id="@+id/egypt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/egypt"
            android:layout_toEndOf="@id/girl"
            android:layout_below="@+id/cairo_text"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/sub_text_blue"/>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descriptive_text"
            android:layout_toEndOf="@id/girl"
            android:layout_below="@+id/egypt_text"
            android:layout_marginStart="10dp"
            android:textSize="9sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/description_color"/>

        <LinearLayout
            android:layout_toEndOf="@id/girl"
            android:layout_below="@id/description_text"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/star2"
                android:layout_width="15dp"
                android:layout_height="17dp"
                app:srcCompat="@drawable/ic_star_black_24dp" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="15dp"
                android:layout_height="17dp"
                app:srcCompat="@drawable/ic_star_black_24dp"/>

            <ImageView
                android:id="@+id/star4"
                android:layout_width="15dp"
                android:layout_height="17dp"
                app:srcCompat="@drawable/ic_star_black_24dp"/>

            <ImageView
                android:id="@+id/star5"
                android:layout_width="15dp"
                android:layout_height="17dp"
                app:srcCompat="@drawable/ic_star_black_24dp"/>

            <ImageView
                android:id="@+id/emptyStar"
                android:layout_width="15dp"
                android:layout_height="17dp"
                app:srcCompat="@drawable/ic_star_border_black_24dp" />

            <TextView
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_4_1"
                android:fontFamily="@font/poppins"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/description_color"/>

            <TextView
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reviewa_2_731"
                android:fontFamily="@font/poppins"
                android:textSize="11sp"
                android:textColor="@color/description_color"/>




        </LinearLayout>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>