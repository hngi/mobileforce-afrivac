<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/profile_pic"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_margin="@dimen/dimension_5dp"
        android:text="@string/home_page_top_message"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_margin="@dimen/dimension_5dp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/search_icon_24"
        android:inputType="textPersonName"
        android:hint="@string/find_destination"
        android:background="@drawable/bg_white_rounded"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discover_africa"
        android:textSize="24sp"
        android:layout_margin="@dimen/dimension_5dp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="27dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/dimension_5dp"
        android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="195dp">



        <ImageView

            android:id="@+id/discover_egypt"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="4dp"
            app:srcCompat="@drawable/left_image" />

        <ImageView
            android:layout_below="@+id/textView5"
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/place" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="120dp"
            android:text="@string/cairo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins"
            android:text="@string/egypt"
            android:layout_below="@+id/textView5"
            android:layout_toEndOf="@id/imageView6"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>


        <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="195dp">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/right_image" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="120dp"
            android:text="@string/nairobi"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_below="@+id/textView8"
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/place" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/kenya"
            android:layout_below="@+id/textView8"
            android:layout_toEndOf="@id/imageView8"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_destinations"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="@dimen/dimension_5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homePageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>



</LinearLayout>


</ScrollView>

