<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f2f6ff"
        tools:context=".ProfilePageActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="20dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/back_arrow" />

            <TextView
                android:id="@+id/my_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account"
                android:textSize="24sp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/back_arrow"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/azeez_adeleke"
                android:textSize="15sp"
                android:layout_below="@+id/my_account"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_place_24"
                android:layout_below="@+id/full_name"
                android:text="@string/nigeria"
                android:textSize="15sp"
                android:drawableTint="#8352fd"
                android:layout_marginStart="10dp"/>


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile_image"
                android:layout_toEndOf="@+id/my_account"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/user_image" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_baseline_add_a_photo_24"
                android:layout_toEndOf="@+id/my_account"
                android:layout_alignBottom="@+id/profile_image"
                android:adjustViewBounds="true"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="10dp"
                 />



            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:paddingTop="20dp"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_below="@+id/location"/>


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/username"
                android:layout_alignEnd="@+id/view"
                android:textAlignment="viewEnd"
                android:layout_toEndOf="@+id/username"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:text="@string/azeez_adeleke"
                android:textSize="14sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/username"
                android:background="#C4616060"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:paddingTop="20dp"
                android:layout_below="@+id/view"/>
            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/email"
                android:layout_alignEnd="@+id/email_view"
                android:textAlignment="viewEnd"
                android:layout_toEndOf="@+id/email"
                android:text="@string/azeez_hng_com"
                android:textSize="14sp" />


            <View
                android:id="@+id/email_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/email"
                android:background="#C4616060"/>
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:paddingTop="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/email_view"/>
            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/phone"
                android:layout_alignEnd="@+id/phone_view"
                android:textAlignment="viewEnd"
                android:layout_toEndOf="@+id/phone"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:text="@string/_234_8012345678"
                android:textSize="14sp" />

            <View
                android:id="@+id/phone_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/phone"
                android:background="#C4616060"/>
            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country"
                android:paddingTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_below="@+id/phone_view"/>
            <TextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/country"
                android:layout_alignEnd="@+id/country_view"
                android:text=""
                android:drawableStart="@drawable/nigeria_flag"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:textSize="14sp" />

            <View
                android:id="@+id/country_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/country"
                android:background="#C4616060"/>

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/country_view"/>
            <TextView
                android:id="@+id/user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/gender"
                android:layout_alignEnd="@+id/gender_view"
                android:textAlignment="viewEnd"
                android:layout_toEndOf="@+id/gender"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:text="@string/male"
                android:textSize="14sp" />

            <View
                android:id="@+id/gender_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/gender"
                android:background="#C4616060"/>
            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingTop="20dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_below="@+id/gender_view"/>
            <TextView
                android:id="@+id/user_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/language"
                android:layout_alignEnd="@+id/language_view"
                android:textAlignment="viewEnd"
                android:layout_toEndOf="@+id/language"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:text="@string/english"
                android:textSize="14sp" />

            <View
                android:id="@+id/language_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/language"
                android:background="#C4616060"/>
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:paddingTop="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/language_view"/>
            <TextView
                android:id="@+id/user_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/password"
                android:layout_toEndOf="@+id/password"
                android:layout_alignEnd="@+id/password_view"
                android:textAlignment="viewEnd"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:text="@string/hidden_password"
                android:textSize="14sp" />

            <View
                android:id="@+id/password_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/password"
                android:background="#C4616060"/>


        </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#ffffff"
    android:padding="20dp">


                <TextView
                    android:id="@+id/my_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_place_24"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:paddingTop="20dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/my_destinations" />
    <View
        android:id="@+id/destination_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/my_destination"
        android:background="#C4616060"/>

                <TextView
                    android:id="@+id/saved_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_saved_24"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:paddingTop="20dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/my_destination"
                    android:text="@string/saved_destination" />

    <View
        android:id="@+id/saved_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/saved_destination"
        android:background="#C4616060"/>

                <TextView
                    android:id="@+id/invite_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_invite_24"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:paddingTop="20dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/saved_view"
                    android:text="@string/invite_friends" />
    <View
        android:id="@+id/invite_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/invite_friends"
        android:background="#C4616060"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"
        android:layout_below="@+id/invite_view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/curved_edge"
        android:padding="10dp"
        android:layout_marginTop="30dp"/>

</RelativeLayout>

    </LinearLayout>


</ScrollView>