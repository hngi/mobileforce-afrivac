<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/relative1"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/dimension_20dp"
            android:layout_marginBottom="@dimen/dimension_10dp"
            android:elevation="5dp"
            android:background="#ffffff"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="@dimen/dimension_10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">

            <!--    <ImageButton-->
            <!--        android:id="@+id/favoriteIcon"-->
            <!--        android:layout_width="15dp"-->
            <!--        android:layout_height="15dp"-->
            <!--        android:layout_alignParentEnd="true"-->
            <!--        android:layout_marginTop="8dp"-->
            <!--        android:layout_marginEnd="21dp"-->
            <!--        android:background="@null"-->
            <!--        android:scaleType="centerCrop"-->
            <!--        android:src="@drawable/ic_baseline_share_24"-->
            <!--        />-->


            <TextView
                android:id="@+id/input_display"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="@dimen/dimension_10dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#000000"
                android:textSize="@dimen/dimension_18sp"
                android:hint="Cairo" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/dimension_20dp"
                android:layout_below="@+id/input_display"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="@dimen/dimension_20dp"
                android:lines="2"
                android:hint="The desert heat, the noisy streets and the sheer size of Cairo will leave even the most adaptable traveler with a serious case of culture shock"
                android:textColor="#000000"
                android:textSize="10sp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout2"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        >


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:contentDescription="@string/submit"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@color/colorBlue"/>
        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/dimension_20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="@dimen/dimension_20dp"
            android:text="Save"
            android:textColor="#000000"
            android:textSize="20sp" />


    </RelativeLayout>
</RelativeLayout>
