<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_pic"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:text="Hi Adeleke, \nWhere would you like to visit?"
            android:textSize="18sp" />
        <SearchView
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded"
            android:clickable="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:fontFamily="@font/poppins"
                android:text="Discover Africa"
                android:layout_marginStart="16dp"
                />
            <Button
                android:layout_marginStart="30dp"
                android:layout_gravity="center"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/round_shape_btn2"/>
            <Button
                android:layout_marginStart="2dp"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="6dp"
                android:background="@drawable/round_shape_btn"/>
            <Button
                android:layout_marginStart="2dp"
                android:layout_gravity="center"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/round_shape_btn2"/>
            <Button
                android:layout_marginStart="2dp"
                android:layout_gravity="center"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/round_shape_btn2"/>
            <Button
                android:layout_marginStart="2dp"
                android:layout_gravity="center"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/round_shape_btn2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/round_outline">
                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="169dp"
                    android:src="@drawable/camel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="55dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="bottom"
                    android:text="Cairo"
                    android:textColor="@color/white"
                    android:textSize="26sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="95dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="95dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="bottom"
                    android:text="Egypt"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/round_outline"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:layout_marginStart="16dp">
                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="169dp"
                    android:src="@drawable/girl2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="55dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="bottom"
                    android:text="Nairobi"
                    android:textColor="@color/white"
                    android:textSize="26sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="95dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="95dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="bottom"
                    android:text="Kenya"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Destination"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins"/>
        <RelativeLayout
            android:background="@drawable/round_outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <ImageView
                android:layout_width="109dp"
                android:layout_height="140dp"
                android:src="@drawable/cairo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/poppins"
                android:gravity="bottom"
                android:text="Nairobi"
                android:textColor="@color/black"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/poppins"
                android:text="Kenya"
                android:textColor="#3913B8"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/textLorem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/city"
                android:fontFamily="@font/poppins"
                android:text="Lorem ipsum dolor fhdhjdkdkk fnfnnf\nwhhhffffkkfkfffsjssjnsjj\nywyoufhfhhffffywyey"
                android:textColor="#99000000"
                android:textSize="11sp"/>
            <LinearLayout
                android:layout_marginStart="110dp"
                android:layout_below="@+id/textLorem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/star1"
                    android:layout_below="@+id/textLorem"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_star_border_black_24dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#99000000"
                    android:fontFamily="@font/poppins"
                    android:text="4.1"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#99000000"
                    android:fontFamily="@font/poppins"
                    android:text="(2,731)"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>