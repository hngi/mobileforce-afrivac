<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="questionsStyle">
        <!--Customize the textView here-->
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="answerStyle">
        <!--Customize the textView here-->
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">8sp</item>
    </style>


</resources>
